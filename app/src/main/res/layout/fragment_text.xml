<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.zmj.selfdefinitionview.practice.FirstText
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
        <com.zmj.selfdefinitionview.practice.TextOnPath
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        <com.zmj.selfdefinitionview.practice.DeleteLineText
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        <com.zmj.selfdefinitionview.practice.LocalText
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        <com.zmj.selfdefinitionview.practice.TextBounds
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
