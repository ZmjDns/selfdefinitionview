<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.zmj.selfdefinitionview.practice4.PaintClipView
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            <com.zmj.selfdefinitionview.practice4.CanvasClipPath
                    android:layout_width="140dp"
                    android:layout_height="80dp"/>

            <com.zmj.selfdefinitionview.practice4.CanvasMatrix
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"/>


        </LinearLayout>
        <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.zmj.selfdefinitionview.practice4.CanvasRotate
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.zmj.selfdefinitionview.practice4.MatrixPolyToPoly
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"/>
            <com.zmj.selfdefinitionview.practice4.CameraChange
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_100"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.zmj.selfdefinitionview.practice4.CanvasOfClipPath
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_80"/>

            <com.zmj.selfdefinitionview.practice4.CanvasOfRotate
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_100"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.zmj.selfdefinitionview.practice4.CanvasOfScale
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_150"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.zmj.selfdefinitionview.practice4.CanvasOfSkew
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"/>

            <com.zmj.selfdefinitionview.practice4.MatrixShape
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_100"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.zmj.selfdefinitionview.practice4.MatrixSetPolyToPloy
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_300"/>

        </LinearLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>
